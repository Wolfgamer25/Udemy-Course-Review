<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= udemy.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/udemy/<%= udemy._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="udemy[name]" value="<%= udemy.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="udemy[image]" value="<%= udemy.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="udemy[description]" value="<%= udemy.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/udemy">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

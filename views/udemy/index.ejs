                <span class="card-title activator grey-text text-darken-4"><%= udemy.name %></span>
                <p><a href="/udemy/<%= udemy._id %>">More Info</a></p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
              </div>
            </div>
          </div>


        <% }); %>
        <a href='/udemy/new'>
        <div class="col s12 m5">
          <div class="card small">
            <div class="card-image">
              <img src="http://www.iconsdb.com/icons/preview/gray/plus-5-xxl.png">

            </div>
            <div class="card-content">
              Add a Udemy Course!
            </div>
            <div class="card-action">
            </div>
          </div>
        </div>


</a>
        </div>
    </div>


